---
import HeaderLink from './HeaderLink.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import '../styles/header.css';
---

<header>
	<nav>
	
		<div class="tabs-format">
			<HeaderLink href="/">home</HeaderLink>
			<HeaderLink href="/updates">updates</HeaderLink>

			<HeaderLink href="/notes">notes</HeaderLink>
			<HeaderLink href="/about">about</HeaderLink>

			<a>|</a>
			<button id="theme-switch">
				<svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed"><path d="M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q14 0 27.5 1t26.5 3q-41 29-65.5 75.5T444-660q0 90 63 153t153 63q55 0 101-24.5t75-65.5q2 13 3 26.5t1 27.5q0 150-105 255T480-120Z"/></svg>
			</button>


			</div>
		<script is:inline>
			console.log('Script is running');

// Check 2: Button exists
const button = document.getElementById('theme-switch');
if (button) {
	console.log('Button found!');
} else {
	console.log('Button not found!');
}

// Check 3: Click works
if (button) {
	button.addEventListener('click', () => {
		console.log('Button clicked!');
		document.body.classList.toggle('lightmode');
		console.log('Mode is now:', document.body.classList.contains('lightmode') ? 'light' : 'dark');
	});
}





		</script>


		<div class="description">
			<div class="">
				<h2 class="text-2xl font-medium"><a>{SITE_TITLE}</a></h2>
				<p >{SITE_DESCRIPTION}</p>
		</div>


		</div>
	</nav>
</header>

